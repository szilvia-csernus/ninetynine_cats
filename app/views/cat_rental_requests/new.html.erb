
<h1>New Cat Rental Request</h1>
<br>
<form action="<%= cat_rental_requests_url %>" method="post">
  

  <label for="cat">Cat Name</label>
  <select name="cat_rental_request[cat_id]" id="cat"> 
  <option disabled selected> -- select a cat -- </option>
    <% @cats.each do |cat| %>
        <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label for="rental_sd">Start Date</label>
  <input name="cat_rental_request[start_date]" id="rental_sd" type="date">
  <br>
  
  <label for="rental_ed">End Date</label>
  <input name="cat_rental_request[end_date]" id="rental_ed" type="date">
  <br>
  

  <input type="submit" value="Request">

  
</form>
