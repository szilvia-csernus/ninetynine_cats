<!DOCTYPE html>

<% flash[:notices].try(:each) do |msg| %>
  <%= msg %>
<% end %>

<html>
  <head>
    <title>NinetynineCats</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  
  </head>

<body>

  <% if current_user.nil? %>
  <!-- link_to and button_to both upload the authenticity token-->
    <%= link_to "Sign in", new_session_url %> or
    <%= link_to "Sign up", new_user_url %>
  <% else %>
      Logged in as: <%= current_user.username %>
      <%= button_to "Logout", session_url, method: :delete %>
  <% end %>

<%= yield %>

</body>
</html>
